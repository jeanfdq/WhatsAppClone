<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_15"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dimen_140"
            android:layout_height="@dimen/dimen_160"
            android:src="@drawable/user_add"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/edtCreateUserNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:textStyle="normal"
            android:textColor="@color/colorWhite"
            android:hint="Digite seu nome"
            android:textColorHint="@color/colorWhite"
            android:layout_marginTop="@dimen/dimen_20"/>

        <EditText
            android:id="@+id/edtCreateUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textAllCaps="false"
            android:hint="Digite seu e-mail"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"/>

        <EditText
            android:id="@+id/edtCreateUserTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="+55 (99) 9 999999999"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"/>

        <EditText
            android:id="@+id/edtCreateUserSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:hint="Digite sua senhade 6 dÃ­gitos"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"/>


        <Button
            android:id="@+id/btnCreateUserSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_validator_code"
            android:text="Cadastrar"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/dimen_20"/>

    </LinearLayout>

</RelativeLayout>