<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_12"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/imgWhatsLogo"
            android:layout_width="@dimen/dimen_150"
            android:layout_height="@dimen/dimen_150"
            android:src="@drawable/whatslogo"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/txtWhats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WhatsApp"
            android:textColor="@color/colorWhite"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="@dimen/dimen_40"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/edtLoginEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Digite seu e-mail"
            android:textColorHint="@color/colorWhite"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="@dimen/dimen_20"
            android:textColor="@color/colorWhite"/>

        <EditText
            android:id="@+id/edtLoginSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:hint="Digite sua senha de 6 dígitos"
            android:textColorHint="@color/colorWhite"
            android:layout_marginTop="@dimen/dimen_15"
            android:textColor="@color/colorWhite"/>


        <Button
            android:id="@+id/btnLoginLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_validator_code"
            android:text="Login"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/dimen_20"
            android:defaultFocusHighlightEnabled="true"
            android:textColorHighlight="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/txtLoginSigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimen_15"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:text="Não tem uma conta? Cadastra-se"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dimen_20"
            android:onClick="createUser"/>

    </LinearLayout>


</RelativeLayout>